<div class="wrapper">
  <h1>Admin <small>создать категорию</small></h1>
  <div class="row">
    <div class="span4 offset4">
      <%= form_for @category, url: {action: "save_category"}, html: {class: "form-horizontal"} do |f| %>
        <% if @category.errors.any? %>
          <div id="errorExplanation">
            <h2><%= pluralize(@category.errors.count, "error") %> prohibited
              this post from being saved:</h2>
            <ul>
            <% @category.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="control-group">
          <label class="control-label" for="category_slug">Slug</label>
          <div class="controls">
            <%= f.text_field :slug %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="category_title_en">Title (EN)</label>
          <div class="controls">
            <%= f.text_field :title_en %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="category_title_ru">Title (RU)</label>
          <div class="controls">
            <%= f.text_field :title_ru %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= f.submit "Create", class: "btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>