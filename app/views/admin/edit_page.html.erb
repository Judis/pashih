<div class="wrapper">
  <h1>Admin <small>создать страницу</small></h1>
  <div class="row-fluid">
    <div class="span10 offset1">
      <%= form_for @page, url: {action: "update_page"}, html: {class: "form-horizontal"} do |f| %>

        <% if @page.errors.any? %>
          <div id="errorExplanation">
            <h2><%= pluralize(@page.errors.count, "error") %> prohibited
              this post from being saved:</h2>
            <ul>
            <% @page.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row-fluid">
          <div class="span6 offset2">
            <div class="control-group">
              <label class="control-label" for="page_slug">Slug</label>
              <div class="controls">
                <%= f.text_field :slug %>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span5">
            <div class="control-group">
              <label class="control-label" for="page_title_en">Title (EN)</label>
              <div class="controls">
                <%= f.text_field :title_en %>
              </div>
            </div>
          </div>
          <div class="span5">
            <div class="control-group">
              <label class="control-label" for="page_title_ru">Title (RU)</label>
              <div class="controls">
                <%= f.text_field :title_ru %>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span10">
            <div class="control-group">
              <label class="control-label" for="page_content_en">Content (EN)</label>
              <div class="controls">
                <%= f.cktext_area :content_en, rows: 5 %>
              </div>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span10">
            <div class="control-group">
              <label class="control-label" for="page_content_ru">Content (RU)</label>
              <div class="controls">
                <%= f.cktext_area :content_ru, rows: 5 %>
              </div>
            </div>
          </div>          
        </div>

        <div class="control-group">
          <div class="controls">
            <%= f.submit "Save", class: "btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>